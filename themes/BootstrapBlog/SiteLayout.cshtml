@using PowerSite
@using PowerSite.DataModel
@using RazorEngine.Templating
@inherits  TemplateBase<dynamic>
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js">
<!--<![endif]-->
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="@Site.Current.Description">
	<meta name="author" content="@Model.Author == null ? Site.Current.Author.Name : Model.Author.Name">
	<title>@Raw(string.IsNullOrEmpty(Model.Title) ? "" : Model.Title + " - ") @Site.Current.Title</title>

	<link rel="stylesheet" href="/css/bootstrap.min.css">
	<style>
		body {
			padding-top: 50px;
			padding-bottom: 20px;
		}
	</style>
	<link rel="stylesheet" href="/css/blog.css">
	<link rel="stylesheet" href="/css/bootstrap-theme.min.css">
	<script src="/js/vendor/modernizr-2.6.2-respond-1.1.0.min.js"></script>
	@RenderSection("head", false)
</head>
<body>
	<!--[if lt IE 7]>
		 <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
	<![endif]-->
	<div class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="#">@Site.Current.Title</a>
			</div>
			<div class="navbar-collapse collapse navbar-responsive-collapse">
				<ul class="nav navbar-nav navbar-right">
					<li class="@(ViewBag.Active == "home" ? "active" : null)"><a href="#">Home</a></li>
					<li class="@(ViewBag.Active == "blog" ? "active" : null)"><a href="/blog">Blog</a></li>
					<li class="@(ViewBag.Active == "about" ? "active" : null)"><a href="#">About Me</a></li>
				</ul>
			</div><!--/.navbar-collapse -->
		</div>
	</div>

	@RenderBody()
	
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
	<script>window.jQuery || document.write('<script src="js/vendor/jquery-1.11.1.min.js"><\/script>')</script>
	<script src="/js/vendor/bootstrap.min.js"></script>
	<script src="/js/main.js"></script>
	@* Google Analytics: change UA-XXXXX-X to be your site's ID. *@
	<script>
		(function (i, s, o, g, r, a, m) {
			i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
				(i[r].q = i[r].q || []).push(arguments)
			}, i[r].l = 1 * new Date(); a = s.createElement(o),
				m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
		})(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

		ga('create', 'UA-52513307-1', 'auto');
		ga('send', 'pageview');
	</script>
	@RenderSection("script", false)
</body>
</html>
